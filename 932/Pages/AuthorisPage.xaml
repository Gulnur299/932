<Page x:Class="_932.Pages.AuthorisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_932.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorisPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TbLogin"
                 Grid.Row="3"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 VerticalAlignment="Bottom"
                 Height="31"
                 FontSize="20"/>
        <TextBlock Text="Логин" FontWeight="DemiBold" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Top" FontSize="19"/>
        <PasswordBox x:Name="TbPassword" Grid.Row="4" Grid.Column="1" VerticalAlignment="Bottom" Height="31" FontSize="20" Grid.ColumnSpan="2"/>
        <TextBlock Text="Пароль" FontWeight="DemiBold" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" FontSize="19"/>
        <Button x:Name="BtnAuthoriz" Content="Войти" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Background="Green" Height="30" VerticalAlignment="Top"
         FontSize="15" FontWeight="Bold" Click="BtnAuthoriz_Click" Grid.RowSpan="2"/>
        <TextBlock x:Name="TbRegist" Text="НЕТ АККАУНТА?! ЗАВОДИ!!!" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Top" 
       HorizontalAlignment="Center" FontSize="14" Foreground="Black" MouseDown="TextBlockMouseDown" MouseEnter="TextBlockMouseEnter" MouseLeave="TextBlockMouseEnter" Width="285"/>
    </Grid>
</Page>
